@model User
@{
    ViewData["Title"] = "Update Page";
}
<h1>Update</h1>
<div class="first">
    <form asp-action="Update" method="post">
        <input type="text" placeholder="Name" name="U_id" value="@Model.U_id" hidden>
        <label for="Name">Name</label><br>
        <input type="text" placeholder="Name" name="Username" value="@Model.Username">
        <br>
        <br>
        <label for="E-mail">E-mail</label><br>
        <input type="email" placeholder="E-mail" name="Email" value="@Model.Email">
        <br>
        <br>
        <label for="password">Password</label><br>
        <input type="Password" placeholder="Password" name="Password" value="@Model.Password">
        <br><br>
        <button type="submit">Update</button>
    </form>
</div>